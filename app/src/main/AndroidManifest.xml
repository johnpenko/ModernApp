<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ljr.modernapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".common.NotepadActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".movieapp.MovieActivity"
            android:label="@string/title_activity_movie"
            android:parentActivityName=".common.NotepadActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".common.NotepadActivity" />
        </activity>
        <activity
            android:name=".drawingapp.DrawingActivity"
            android:label="@string/title_activity_drawing"
            android:parentActivityName=".common.NotepadActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".common.NotepadActivity" />
        </activity>
        <activity
            android:name=".reminderapp.ReminderActivity"
            android:label="@string/title_activity_reminder"
            android:parentActivityName=".common.NotepadActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".common.NotepadActivity" />
        </activity>
        <activity
            android:name=".todoapp.TodoActivity"
            android:label="@string/title_activity_todo"
            android:parentActivityName=".common.NotepadActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".common.NotepadActivity" />
        </activity>
    </application>

</manifest>
